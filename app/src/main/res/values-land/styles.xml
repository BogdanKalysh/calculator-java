<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButton">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:background">@drawable/buttons_states</item>
        <item name="android:textColor">@color/number_text</item>
    </style>

    <style name="InputTextStyle">
        <item name="android:textColor">@color/input_field</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">50sp</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="ResultTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/result_field</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingBottom">30dp</item>
    </style>
</resources>