<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/main_activity__textfield"

        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/purple_200"
        android:gravity="end"
        android:paddingEnd="10dp"
        android:text="0"

        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_activity__result"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"

        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/main_activity__textfield" />

    <Button
        android:id="@+id/main_activity__erase"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="esc"
        android:textSize="8sp"

        android:background="@color/teal_200"

        app:layout_constraintTop_toTopOf="@id/main_activity__resetbutton"
        app:layout_constraintStart_toStartOf="@id/main_activity__eight"
        />

    <Button
        android:id="@+id/main_activity__resetbutton"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="C"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toBottomOf="@id/main_activity__textfield"
        app:layout_constraintStart_toStartOf="@id/main_activity__seven"
        app:layout_constraintBottom_toTopOf="@id/main_activity__seven"

        />

    <Button
        android:id="@+id/main_activity__seven"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="7"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toBottomOf="@id/main_activity__resetbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_activity__four"
        app:layout_constraintEnd_toStartOf="@id/main_activity__eight"

        />

    <Button
        android:id="@+id/main_activity__four"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="4"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toBottomOf="@id/main_activity__seven"
        app:layout_constraintStart_toStartOf="@id/main_activity__seven"
        app:layout_constraintBottom_toTopOf="@id/main_activity__one"

        />

    <Button
        android:id="@+id/main_activity__one"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="1"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toBottomOf="@id/main_activity__four"
        app:layout_constraintStart_toStartOf="@id/main_activity__four"
        app:layout_constraintBottom_toTopOf="@id/main_activity__zero"

        />


    <Button
        android:id="@+id/main_activity__eight"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="8"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toTopOf="@id/main_activity__seven"
        app:layout_constraintStart_toEndOf="@id/main_activity__seven"
        app:layout_constraintEnd_toStartOf="@id/main_activity__nine"

        />

    <Button
        android:id="@+id/main_activity__five"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="5"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toTopOf="@id/main_activity__four"
        app:layout_constraintStart_toStartOf="@id/main_activity__eight"

        />

    <Button
        android:id="@+id/main_activity__two"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="2"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toTopOf="@id/main_activity__one"
        app:layout_constraintStart_toStartOf="@id/main_activity__five"

        />

    <Button
        android:id="@+id/main_activity__zero"

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/teal_200"
        android:text="0"


        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/main_activity__two"
        app:layout_constraintTop_toBottomOf="@+id/main_activity__one"

        />

    <Button
        android:id="@+id/main_activity__nine"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="9"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toTopOf="@id/main_activity__eight"
        app:layout_constraintStart_toEndOf="@id/main_activity__eight"
        app:layout_constraintEnd_toStartOf="@id/main_activity__multiply"

        />

    <Button
        android:id="@+id/main_activity__divisionReminder"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="%"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toTopOf="@id/main_activity__erase"
        app:layout_constraintStart_toStartOf="@id/main_activity__nine"

        />

    <Button
        android:id="@+id/main_activity__six"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="6"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toTopOf="@id/main_activity__five"
        app:layout_constraintStart_toStartOf="@id/main_activity__nine"

        />

    <Button
        android:id="@+id/main_activity__three"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="3"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toTopOf="@id/main_activity__two"
        app:layout_constraintStart_toStartOf="@id/main_activity__six"

        />

    <Button
        android:id="@+id/main_activity__divide"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="/"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toTopOf="@id/main_activity__divisionReminder"
        app:layout_constraintStart_toStartOf="@id/main_activity__multiply"
        />

    <Button
        android:id="@+id/main_activity__multiply"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="*"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toTopOf="@id/main_activity__nine"
        app:layout_constraintStart_toEndOf="@id/main_activity__nine"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/main_activity__minus"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="-"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toTopOf="@id/main_activity__six"
        app:layout_constraintStart_toStartOf="@id/main_activity__multiply"
        />

    <Button
        android:id="@+id/main_activity__plus"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:text="+"
        android:textSize="20sp"


        android:background="@color/teal_200"

        app:layout_constraintTop_toTopOf="@id/main_activity__three"
        app:layout_constraintStart_toStartOf="@id/main_activity__minus"
        />

    <Button
        android:id="@+id/main_activity__equals"

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/teal_200"
        android:text="="


        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="@id/main_activity__plus"
        app:layout_constraintTop_toTopOf="@id/main_activity__zero"

        tools:layout_editor_absoluteY="711dp" />

</androidx.constraintlayout.widget.ConstraintLayout>